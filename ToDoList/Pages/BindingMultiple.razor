@page "/binding-multiple"

<h1>Binding Múltiple</h1>

<p>
    <label>
        Elige coches:
        <select @onchange="SelectCarsChanged" multiple>
            <option value="audi">Audi</option>
            <option value="jeep">Jeep</option>
            <option value="opel">Opel</option>
            <option value="saab">Saab</option>
            <option value="volvo">Volvo</option>
        </select>
    </label>
</p>

<span>
    Coches elegidos: @string.Join(", ",SelectedCars)
</span>

<p>
    <label>
        Elige ciudades:
        <select @onchange="SelectCitiesChanged" multiple>
            <option value="bal">Baltimore</option>
            <option value="la">Los Angeles</option>
            <option value="pdx">Pordtland</option>
            <option value="sf">San Francisco</option>
            <option value="sea">Seattle</option>
        </select>
    </label>
</p>

<span>
    Ciudades elegidas: @string.Join(", ",SelectedCities)
</span>
@code {
    public string[] SelectedCars { get; set; } = new string[] { };
    public string[] SelectedCities { get; set; } = new string[] { };
    private void SelectCarsChanged(ChangeEventArgs e)
    {
        SelectedCars = (string[])e.Value;
    }
    private void SelectCitiesChanged(ChangeEventArgs e)
    {
        SelectedCities = (string[])e.Value;
    }
}